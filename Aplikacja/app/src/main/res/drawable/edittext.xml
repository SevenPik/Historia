<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/R"></solid>
                    <corners android:radius="10dp"></corners>
                    <stroke android:color="@color/BR" android:width="2dp"></stroke>
                </shape>
            </item>
            <item android:bottom="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/W"></solid>
                    <corners android:radius="10dp"></corners>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/R"></solid>
                    <corners android:radius="10dp"></corners>
                    <stroke android:color="@color/F" android:width="2dp"></stroke>
                </shape>
            </item>
            <item android:bottom="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/W"></solid>
                    <corners android:radius="10dp"></corners>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
